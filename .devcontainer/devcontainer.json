{   
    "image": "swgoo/nonmem",
    "workspaceFolder": "/workspace",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "tnzo12.nmbench",
        "dpastoor.vscode-nm",
        "REditorSupport.r"
    ],
    "mounts": [
        {
            "source": "${localWorkspaceFolder}/.devcontainer/nonmem.lic",
            "target": "/opt/NONMEM/nm_current/license/nonmem.lic",
            "type": "bind"
        },
        {
            "source": "${localWorkspaceFolder}",
            "target": "/workspace",
            "type": "bind"
        }
    ],
}
